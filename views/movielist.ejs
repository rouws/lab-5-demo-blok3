<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('layout/head'); -%>
</head>

<body>

    <%- include('layout/header'); -%>

    <h1><%= title %></h1>

    <a class="button" href="/movies/filter">Filter Movies</a>

    <%  movies.forEach(function(movie){ %>
    <section>
        <h2><%= movie.name %></h2>
        <h3><%= movie.year %></h3>
        <h3>Categories: </h3>
        <ul>
            <% movie.categories.forEach(function(category){ %>
            <li><%= category %></li>
            <% }) %>
        </ul>
        <p><a href="/movies/<%= movie.id %>">Meer info</a></p>
    </section>
    <% }) %>

    <a class="button" href="/movies/add">+ Add Movie</a>

    <%- include('layout/footer'); -%>

</body>

</html>